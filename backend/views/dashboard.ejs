<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Guesswhere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Sora', sans-serif; }
    </style>
</head>
<body class="bg-[#FBFBFB]">
    <div class="min-h-screen">
        <!-- Header -->
        <header class="border-b border-gray-200 bg-white">
            <div class="max-w-[1400px] mx-auto px-8 py-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center gap-8">
                        <h1 class="text-xl font-bold text-black">Guesswhere</h1>
                        <nav class="flex items-center gap-6">
                            <a href="/dashboard" class="text-sm font-medium text-black transition-colors">Dashboard</a>
                            <a href="/sites" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Sites</a>
                            <a href="/profile" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Profile</a>
                        </nav>
                    </div>
                    <div class="flex items-center gap-4">
                        <a href="/logout" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">Logout</a>
                        <div class="w-9 h-9 rounded-full bg-gradient-to-br from-purple-400 to-blue-500 flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.email[0].toUpperCase() %>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="max-w-[1400px] mx-auto px-8 py-8">
            <!-- Site Selector -->
            <div class="mb-8 flex justify-between items-center gap-4 flex-wrap">
                <div class="flex items-center gap-3 flex-wrap">
                    <select id="siteSelector" class="px-4 py-2 bg-white border border-gray-200 rounded-xl text-sm font-medium text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#84994F] min-w-[250px]">
                        <option value="">Loading sites...</option>
                    </select>
                    
                    <select id="timeframeSelector" class="px-4 py-2 bg-white border border-gray-200 rounded-xl text-sm font-medium text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#84994F]">
                        <option value="24h">Last 24 Hours</option>
                        <option value="7d" selected>Last 7 Days</option>
                        <option value="30d">Last 30 Days</option>
                    </select>
                </div>

                <a href="/sites" class="px-4 py-2 bg-[#84994F] text-white text-sm font-medium rounded-xl hover:bg-[#6B7A3F] transition-colors">
                    + Add Site
                </a>
            </div>

            <!-- Loading State -->
            <div id="loadingState" class="text-center py-16">
                <p class="text-xl text-gray-600">Loading analytics...</p>
            </div>

            <!-- No Sites State -->
            <div id="noSitesState" class="hidden bg-white rounded-2xl p-16 text-center border border-gray-100">
                <p class="text-xl text-gray-600 mb-6">No sites yet. Add your first site to start tracking!</p>
                <a href="/sites" class="inline-block px-6 py-3 bg-[#84994F] text-white font-medium rounded-xl hover:bg-[#6B7A3F] transition-colors">
                    Add Your First Site
                </a>
            </div>

            <!-- Stats Content -->
            <div id="statsContent" class="hidden">
                <!-- Summary Stats -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mb-8">
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-4">Page Views</h3>
                        <p id="stat-pageviews" class="text-3xl font-bold text-gray-900 mb-2">0</p>
                        <div class="flex items-center gap-2">
                            <span class="text-xs font-semibold text-[#84994F] bg-green-50 px-2 py-1 rounded">↑ 8%</span>
                            <span class="text-xs text-gray-500">From last period</span>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-4">Sessions</h3>
                        <p id="stat-sessions" class="text-3xl font-bold text-gray-900 mb-2">0</p>
                        <div class="flex items-center gap-2">
                            <span class="text-xs font-semibold text-green-600 bg-green-50 px-2 py-1 rounded">↑ 5%</span>
                            <span class="text-xs text-gray-500">From last period</span>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-4">Scroll Depth</h3>
                        <p id="stat-scroll" class="text-3xl font-bold text-gray-900 mb-2">0%</p>
                        <div class="flex items-center gap-2">
                            <span class="text-xs font-semibold text-green-600 bg-green-50 px-2 py-1 rounded">↑ 3%</span>
                            <span class="text-xs text-gray-500">From last period</span>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-4">Avg Time</h3>
                        <p id="stat-time" class="text-3xl font-bold text-gray-900 mb-2">0s</p>
                        <div class="flex items-center gap-2">
                            <span class="text-xs font-semibold text-green-600 bg-green-50 px-2 py-1 rounded">↑ 12%</span>
                            <span class="text-xs text-gray-500">From last period</span>
                        </div>
                    </div>
                </div>

                <!-- Charts Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-5 mb-8">
                    <!-- Daily Breakdown Chart -->
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <h3 class="text-base font-semibold text-gray-900">Daily Activity</h3>
                                <p class="text-xs text-gray-500 mt-1">Page views over time</p>
                            </div>
                        </div>
                        <canvas id="dailyChart" height="250"></canvas>
                    </div>

                    <!-- Top Pages -->
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <h3 class="text-base font-semibold text-gray-900">Top Pages</h3>
                                <p class="text-xs text-gray-500 mt-1">Most visited pages</p>
                            </div>
                        </div>
                        <div id="topPages" class="space-y-3">
                            <p class="text-gray-500">No data available</p>
                        </div>
                    </div>

                    <!-- Tracking Code -->
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm lg:col-span-2">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <h3 class="text-base font-semibold text-gray-900">Tracking Code</h3>
                                <p class="text-xs text-gray-500 mt-1">Add this snippet to your site</p>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded-xl p-4 mb-4 border border-gray-200">
                            <code id="trackingCode" class="text-xs font-mono text-gray-700 break-all">
                                Select a site to view tracking code
                            </code>
                        </div>
                        <button onclick="copyTrackingCode()" class="px-4 py-2.5 bg-[#84994F] text-white text-sm font-medium rounded-xl hover:bg-[#6B7A3F] transition-colors">
                            Copy to Clipboard
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let sites = [];
        let selectedSite = null;
        let dailyChart = null;

        // Load sites on page load
        async function loadSites() {
            try {
                const response = await fetch('/api/sites');
                const data = await response.json();
                sites = Array.isArray(data.sites) ? data.sites : (Array.isArray(data) ? data : []);
                
                if (sites.length === 0) {
                    document.getElementById('loadingState').classList.add('hidden');
                    document.getElementById('noSitesState').classList.remove('hidden');
                    return;
                }

                const selector = document.getElementById('siteSelector');
                selector.innerHTML = sites.map(site => 
                    `<option value="${site._id}">${site.name} (${site.domain})</option>`
                ).join('');
                
                selectedSite = sites[0];
                loadStats();
            } catch (error) {
                console.error('Failed to load sites:', error);
                document.getElementById('loadingState').innerHTML = '<p class="text-red-600">Failed to load sites</p>';
            }
        }

        // Load stats for selected site
        async function loadStats() {
            if (!selectedSite) return;
            
            const timeframe = document.getElementById('timeframeSelector').value;
            
            try {
                const response = await fetch(`/api/stats/${selectedSite.apiKey}?timeframe=${timeframe}`);
                const stats = await response.json();
                
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('statsContent').classList.remove('hidden');
                
                // Update summary stats
                document.getElementById('stat-pageviews').textContent = (stats.summary?.pageviews || 0).toLocaleString();
                document.getElementById('stat-sessions').textContent = (stats.summary?.uniqueSessions || 0).toLocaleString();
                document.getElementById('stat-scroll').textContent = `${stats.summary?.avgScrollDepth || 0}%`;
                document.getElementById('stat-time').textContent = `${Math.floor(stats.summary?.avgTimeOnPage || 0)}s`;
                
                // Update tracking code
                const trackingDomain = window.location.origin;
                document.getElementById('trackingCode').textContent = 
                    `<script src="${trackingDomain}/tracker.js" data-site-id="${selectedSite.apiKey}"><\/script>`;
                
                // Update chart
                updateChart(stats.dailyBreakdown || []);
                
                // Update top pages (simplified)
                updateTopPages(stats.topPages || []);
                
            } catch (error) {
                console.error('Failed to load stats:', error);
            }
        }

        function updateChart(data) {
            const ctx = document.getElementById('dailyChart');
            
            if (dailyChart) {
                dailyChart.destroy();
            }
            
            dailyChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(d => d.date),
                    datasets: [{
                        label: 'Page Views',
                        data: data.map(d => d.pageviews),
                        borderColor: '#84994F',
                        backgroundColor: 'rgba(132, 153, 79, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function updateTopPages(pages) {
            const container = document.getElementById('topPages');
            if (!pages || pages.length === 0) {
                container.innerHTML = '<p class="text-gray-500">No page data available</p>';
                return;
            }
            
            container.innerHTML = pages.slice(0, 5).map(page => `
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-sm text-gray-700 truncate flex-1">${page.page || '/'}</span>
                    <span class="text-sm font-semibold text-gray-900 ml-4">${page.views || 0}</span>
                </div>
            `).join('');
        }

        function copyTrackingCode() {
            const code = document.getElementById('trackingCode').textContent;
            navigator.clipboard.writeText(code).then(() => {
                alert('Tracking code copied to clipboard!');
            });
        }

        // Event listeners
        document.getElementById('siteSelector').addEventListener('change', (e) => {
            selectedSite = sites.find(s => s._id === e.target.value);
            loadStats();
        });

        document.getElementById('timeframeSelector').addEventListener('change', () => {
            loadStats();
        });

        // Initialize
        loadSites();
    </script>
</body>
</html>
