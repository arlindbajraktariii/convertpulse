<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Guesswhere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Sora', sans-serif; }
    </style>
</head>
<body class="bg-[#FBFBFB]">
    <div class="min-h-screen">
        <!-- Header -->
        <header class="border-b border-gray-200 bg-white">
            <div class="max-w-[1400px] mx-auto px-8 py-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center gap-8">
                        <h1 class="text-xl font-bold text-black">Guesswhere</h1>
                        <nav class="flex items-center gap-6">
                            <a href="/dashboard" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Dashboard</a>
                            <a href="/sites" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Sites</a>
                            <a href="/profile" class="text-sm font-medium text-black transition-colors">Profile</a>
                        </nav>
                    </div>
                    <div class="flex items-center gap-4">
                        <a href="/logout" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">Logout</a>
                        <div class="w-9 h-9 rounded-full bg-gradient-to-br from-purple-400 to-blue-500 flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.email[0].toUpperCase() %>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="max-w-4xl mx-auto px-8 py-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Profile Settings</h2>

            <div class="space-y-6">
                <!-- Account Information -->
                <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
                    <h3 class="text-xl font-bold mb-6">Account Information</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                            <p class="text-gray-900"><%= user.name %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                            <p class="text-gray-900"><%= user.email %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Plan</label>
                            <span class="inline-block px-3 py-1 bg-[#84994F] text-white text-sm font-medium rounded-full capitalize">
                                <%= user.plan %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Change Password -->
                <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
                    <h3 class="text-xl font-bold mb-6">Change Password</h3>
                    <form id="changePasswordForm" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Current Password</label>
                            <input type="password" id="currentPassword" required 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#84994F]">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                            <input type="password" id="newPassword" required minlength="6"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#84994F]">
                            <p class="mt-1 text-xs text-gray-500">Must be at least 6 characters</p>
                        </div>
                        <div id="passwordError" class="hidden p-4 bg-red-50 border border-red-200 text-red-600 rounded-lg text-sm"></div>
                        <div id="passwordSuccess" class="hidden p-4 bg-green-50 border border-green-200 text-green-600 rounded-lg text-sm"></div>
                        <button type="submit" class="px-6 py-3 bg-[#84994F] text-white font-medium rounded-lg hover:bg-[#6B7A3F] transition-colors">
                            Update Password
                        </button>
                    </form>
                </div>

                <!-- Subscription -->
                <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
                    <h3 class="text-xl font-bold mb-4">Subscription</h3>
                    <p class="text-gray-600 mb-6">You are currently on the <span class="font-bold capitalize"><%= user.plan %></span> plan.</p>
                    <% if (user.plan === 'free') { %>
                        <a href="/#pricing" class="inline-block px-6 py-3 bg-[#84994F] text-white font-medium rounded-lg hover:bg-[#6B7A3F] transition-colors">
                            Upgrade to Growth
                        </a>
                    <% } else { %>
                        <p class="text-sm text-gray-500">Thank you for being a Growth plan subscriber!</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('changePasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const errorDiv = document.getElementById('passwordError');
            const successDiv = document.getElementById('passwordSuccess');
            
            errorDiv.classList.add('hidden');
            successDiv.classList.add('hidden');
            
            try {
                const response = await fetch('/api/auth/change-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ currentPassword, newPassword }),
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    successDiv.textContent = 'Password updated successfully!';
                    successDiv.classList.remove('hidden');
                    document.getElementById('changePasswordForm').reset();
                } else {
                    errorDiv.textContent = data.error || 'Failed to update password';
                    errorDiv.classList.remove('hidden');
                }
            } catch (error) {
                errorDiv.textContent = 'An error occurred. Please try again.';
                errorDiv.classList.remove('hidden');
            }
        });
    </script>
</body>
</html>
