<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sites - Guesswhere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Sora', sans-serif; }
    </style>
</head>
<body class="bg-[#FBFBFB]">
    <div class="min-h-screen">
        <!-- Header -->
        <header class="border-b border-gray-200 bg-white">
            <div class="max-w-[1400px] mx-auto px-8 py-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center gap-8">
                        <h1 class="text-xl font-bold text-black">Guesswhere</h1>
                        <nav class="flex items-center gap-6">
                            <a href="/dashboard" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Dashboard</a>
                            <a href="/sites" class="text-sm font-medium text-black transition-colors">Sites</a>
                            <a href="/profile" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Profile</a>
                        </nav>
                    </div>
                    <div class="flex items-center gap-4">
                        <a href="/logout" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">Logout</a>
                        <div class="w-9 h-9 rounded-full bg-gradient-to-br from-purple-400 to-blue-500 flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.email[0].toUpperCase() %>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="max-w-[1400px] mx-auto px-8 py-8">
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-900">Your Sites</h2>
                    <p class="text-gray-600 mt-2">Manage your tracked websites</p>
                </div>
                <button onclick="showAddSiteModal()" class="px-6 py-3 bg-[#84994F] text-white font-medium rounded-xl hover:bg-[#6B7A3F] transition-colors">
                    + Add New Site
                </button>
            </div>

            <!-- Sites Grid -->
            <div id="sitesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Loading state -->
                <div class="col-span-full text-center py-12">
                    <p class="text-gray-600">Loading sites...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Site Modal -->
    <div id="addSiteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-6 z-50">
        <div class="bg-white rounded-2xl p-8 max-w-md w-full shadow-2xl">
            <h2 class="text-2xl font-bold mb-6">Add New Site</h2>
            <form id="addSiteForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium mb-2">Site Name</label>
                    <input type="text" id="siteName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#84994F]" placeholder="My Landing Page">
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Domain</label>
                    <input type="text" id="siteDomain" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#84994F]" placeholder="example.com">
                </div>
                <div id="addSiteError" class="hidden p-4 bg-red-50 border border-red-200 text-red-600 rounded-lg text-sm"></div>
                <div class="flex gap-4">
                    <button type="submit" class="flex-1 px-6 py-3 bg-[#84994F] text-white font-medium rounded-lg hover:bg-[#6B7A3F] transition-colors">
                        Add Site
                    </button>
                    <button type="button" onclick="hideAddSiteModal()" class="flex-1 px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let sites = [];

        async function loadSites() {
            try {
                const response = await fetch('/api/sites');
                const data = await response.json();
                sites = Array.isArray(data.sites) ? data.sites : (Array.isArray(data) ? data : []);
                
                const grid = document.getElementById('sitesGrid');
                
                if (sites.length === 0) {
                    grid.innerHTML = `
                        <div class="col-span-full text-center py-16">
                            <p class="text-xl text-gray-600 mb-6">No sites yet. Add your first site to start tracking!</p>
                            <button onclick="showAddSiteModal()" class="px-6 py-3 bg-[#84994F] text-white font-medium rounded-xl hover:bg-[#6B7A3F] transition-colors">
                                Add Your First Site
                            </button>
                        </div>
                    `;
                    return;
                }
                
                grid.innerHTML = sites.map(site => `
                    <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm hover:shadow-md transition-shadow">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="text-lg font-bold text-gray-900">${site.name}</h3>
                                <p class="text-sm text-gray-500">${site.domain}</p>
                            </div>
                            <button onclick="deleteSite('${site._id}')" class="text-red-600 hover:text-red-700">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </div>
                        <div class="space-y-3">
                            <div>
                                <p class="text-xs text-gray-500 mb-1">API Key</p>
                                <div class="flex items-center gap-2">
                                    <code class="text-xs bg-gray-50 px-3 py-2 rounded flex-1 font-mono">${site.apiKey}</code>
                                    <button onclick="copyApiKey('${site.apiKey}')" class="text-[#84994F] hover:text-[#6B7A3F]">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                            <div class="pt-3 border-t border-gray-100">
                                <a href="/dashboard" class="text-sm text-[#84994F] hover:text-[#6B7A3F] font-medium">
                                    View Analytics â†’
                                </a>
                            </div>
                        </div>
                    </div>
                `).join('');
                
            } catch (error) {
                console.error('Failed to load sites:', error);
                document.getElementById('sitesGrid').innerHTML = '<div class="col-span-full text-center text-red-600">Failed to load sites</div>';
            }
        }

        function showAddSiteModal() {
            document.getElementById('addSiteModal').classList.remove('hidden');
        }

        function hideAddSiteModal() {
            document.getElementById('addSiteModal').classList.add('hidden');
            document.getElementById('addSiteForm').reset();
            document.getElementById('addSiteError').classList.add('hidden');
        }

        document.getElementById('addSiteForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const name = document.getElementById('siteName').value;
            const domain = document.getElementById('siteDomain').value;
            const errorDiv = document.getElementById('addSiteError');
            
            try {
                const response = await fetch('/api/sites', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name, domain }),
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    hideAddSiteModal();
                    loadSites();
                } else {
                    errorDiv.textContent = data.error || 'Failed to add site';
                    errorDiv.classList.remove('hidden');
                }
            } catch (error) {
                errorDiv.textContent = 'An error occurred. Please try again.';
                errorDiv.classList.remove('hidden');
            }
        });

        async function deleteSite(siteId) {
            if (!confirm('Are you sure you want to delete this site? This action cannot be undone.')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/sites/${siteId}`, {
                    method: 'DELETE',
                });
                
                if (response.ok) {
                    loadSites();
                } else {
                    alert('Failed to delete site');
                }
            } catch (error) {
                alert('An error occurred. Please try again.');
            }
        }

        function copyApiKey(apiKey) {
            navigator.clipboard.writeText(apiKey).then(() => {
                alert('API key copied to clipboard!');
            });
        }

        // Initialize
        loadSites();
    </script>
</body>
</html>
